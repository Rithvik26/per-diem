# Square API Configuration
SQUARE_ACCESS_TOKEN=your_square_sandbox_access_token
SQUARE_BASE_URL=https://connect.squareupsandbox.com
SQUARE_API_VERSION=2024-01-18
SQUARE_WEBHOOK_SIGNATURE_KEY=your_webhook_signature_key

# Server Configuration
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# Cache Configuration
CACHE_PROVIDER=memory
CACHE_TTL_SECONDS=300

# Redis Configuration (only required if CACHE_PROVIDER=redis)
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=50

# Frontend Configuration (apps/frontend/.env)
VITE_API_BASE_URL=http://localhost:3001
